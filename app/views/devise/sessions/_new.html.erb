<div class="container-fluid">
		<div class="row-fluid">
		
			<div class="row-fluid">
				<div class="span12 center login-header">
					<h2>Welcome to VLTS</h2>
				</div><!--/span-->
			</div><!--/row-->
			
			<div class="row-fluid">
				<div class="well span5 center login-box">
					<%if flash[:notice] == "Invalid Username or Password" %>
					<div class="alert alert-info">
						Invalid Username or Password
					</div>
					<%else%>
					<div class="alert alert-info">
						Please login with your Username and Password.
					</div>
					<%end%>	
					<%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :method => "post", :url => session_path(resource_name)) do |f| %>
						<fieldset>
							<div class="input-prepend " title="Username" data-rel="tooltip">
								<span class="add-on"><i class="icon-user"></i></span>
								<%= f.email_field :email, :class => "input-large span10", :id => "usersername" %>
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend " title="Password" data-rel="tooltip">
								<span class="add-on"><i class="icon-lock"></i></span>
								<%= f.password_field :password, :class => "input-large span10", :id => "password" %>
							</div>
							<div class="clearfix"></div>

							<p class="center span5">
							<%=	f.submit "Login", :class => "btn btn-primary" %>
							</p>
						</fieldset>
					<% end %>

							<div class="input-prepend">
								<label class="remember gap" for="remember"><a href = "/users/forgot">Forgot Password</a></label>
							</div>
				</div><!--/span-->
			</div><!--/row-->
				</div><!--/fluid-row-->
		
	</div><!--/.fluid-container-->



