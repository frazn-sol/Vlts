.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Slots
    .box-content
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
        %thead
          %tr
            %th Name
            %th Description
            %th Actions

          - @slots.each do |slot|
            %tr
              %td= slot.name
              %td.center= slot.description
              %td.center
                = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, slot, :class => "btn btn-success"
                = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_slot_path(slot), :class => "btn btn-info"
                = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, slot, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"