.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Locations
    .box-content
      = link_to "<i class=\"icon-plus icon-white\"></i> Location".html_safe, new_location_path, :class => "btn btn-success add"
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
        %thead
          %tr
            %th Nickname
            %th Address1
            %th Phone1
            %th Website
            %th Email            
            %th Actions
        - @locations.each do |location|
          - if location.user_id == current_user.id.to_s
            %tbody
              %tr
                %td= location.company_name
                %td.center= "#{location.address1} "+"#{location.state} "+ "#{location.zipcode}"
                %td.center= location.phone1
                %td.center= location.web
                %td.center= location.email
                %td.center
                  = link_to "View All".html_safe, location_contacts_path(:id => location.id), :class => "btn btn-success"  
                %td.center
                  = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, location, :class => "btn btn-success"
                  = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_location_path(location), :class => "btn btn-info"
                  = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, location, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"

