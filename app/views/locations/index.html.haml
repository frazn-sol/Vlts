.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Locations
    .box-content
      #tagbar
        .aleft
          = render ("layouts/breadcrumbs")
        .aright
          = link_to "<i class=\"icon-plus icon-white\"></i> Add new".html_safe, new_location_path, :class => "btn btn-success add"
          .clear
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th Nickname
            %th Address1
            %th Phone1
            %th Website
            %th Email
            %th Floors            
            %th Actions
        - @locations.each do |location|
          - if location.user_id == current_user.id || location.user_id == current_user.parent_id
            %tbody
              %tr
                %td= location.nickname
                %td.center= "#{location.address1} "+"#{location.state} "+ "#{location.zipcode}"
                %td.center= location.phone1
                %td.center= location.web
                %td.center= location.email
                %td.center.colwidth1
                  = link_to "View All".html_safe, floors_path(:location_id => location.id), :class => "btn btn-success"
                %td.center.colwidth
                  = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, location, :class => "btn btn-success"
                  = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_location_path(location), :class => "btn btn-info"
                  = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, location, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"
      = will_paginate @locations            

