= form_for @contact_person do |f|
  - if @contact_person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contact_person.errors.count, "error")} prohibited this contact_person from being saved:"
      %ul
        - @contact_person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address1
    = f.text_area :address1
  .field
    = f.label :address2
    = f.text_area :address2
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :phone1
    = f.text_field :phone1
  .field
    = f.label :phone2
    = f.text_field :phone2
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :role
    = f.select :role, options_for_select(%w[Admin Manager]) 
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :passwordhint
    = f.text_field :passwordhint
  .actions
    = f.submit 'Save'
