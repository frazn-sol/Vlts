.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Contact Persons
    .box-content
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
        %thead
          %tr
            %th Name
            %th Address1
            %th Phone1
            %th Website
            %th Email
            %th Actions
        - @contact_people.each do |contact_person|
          %tbody
            %tr
              %td= contact_person.name
              %td.center= "#{contact_person.address1} "+ "#{contact_person.city} "+ "#{contact_person.state} "+ "#{contact_person.zipcode}"
              %td.center= contact_person.phone1
              %td.center= contact_person.website
              %td.center= contact_person.email
              %td.center
                = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, contact_person, :class => "btn btn-success"
                = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_contact_person_path(contact_person), :class => "btn btn-info"
                = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, contact_person, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"
  / /span
/ /row