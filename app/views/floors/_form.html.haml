= form_for @floor do |f|
  - if @floor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@floor.errors.count, "error")} prohibited this floor from being saved:"
      %ul
        - @floor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :capacity
    = f.text_field :capacity
  .field
    = f.label :occupied
    = f.text_field :occupied
  .actions
    = f.submit 'Save'
