= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :company_name
    = f.text_field :company_name
  .field
    = f.label :address1
    = f.text_field :address1
  .field
    = f.label :address2
    = f.text_field :address2
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :phone1
    = f.text_field :phone1
  .field
    = f.label :phone2
    = f.text_field :phone2
  .field
    = f.label :web
    = f.text_field :web
  .actions
    = f.submit 'Update', {:class => "button1"}
:javascript
  var validator = new FormValidator('edit_customer', [{
    name: 'customer[company_name]',    
    rules: 'required'
  }, {
    name: 'customer[address1]',
    rules: 'required'
  }, {
    name: 'customer[address2]',
    rules: 'required'
  }, {
    name: 'customer[state]',
    rules: 'required'
  }, {
    name: 'customer[zipcode]',
    rules: 'required'
  }, {
    name: 'customer[phone1]',
    rules: 'required'
  }, {
    name: 'customer[phone2]',
    rules: 'required'
  }, {
    name: 'customer[web]',
    rules: 'required'
  }], function(errors, event) {
    if (errors.length > 0) {
    var temp;
    for (var i=0; i<errors.length; i++){
      temp = errors[i].id;
      $("#" + temp).css("border","2px solid red");
    }
    }  
  });       
