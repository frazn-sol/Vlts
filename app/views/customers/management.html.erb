<div class="row-fluid sortable">        
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i> Customers</h2>
        </div>
        <div class="box-content">
         <div class = "envelope">
 <div class = "allign1">
 <div class="field">
    <%= label_tag "Name" %><br />
    <%= text_field_tag :name, value = nil, :class => "search1" %>
  </div>
  </div>


  <div class = "allign1">
  <div class="field">
    <%= label_tag "Email" %><br />
    <%= text_field_tag :email, value = nil, :class => "search1" %>
  </div>
  </div>

  <div class = "allign1">
  <div class="field">
    <%= label_tag "Contact Person" %><br />
    <%= text_field_tag :contact_person, value = nil, :class => "search2 " %>
  </div>
  </div>

</div>

  <div class="actions">
    <%= button_tag "Search", :class => "location1"%>
  </div>

 <div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>ContactInfo</th>
                                <th>Designation</th>
                                <th>Actions</th>
                              </tr>
                          </thead>   
                          <% @customer.each do |customer| %>
                          <tbody>
                            <tr>
                                <td><%= customer.name %></td>
                                <td class="center"><%= customer.name %></td>
                                <td class="center"><%= customer.email %></td>
                                <td class="center"><%= customer.phone1 %></td>
                                <td class="center">
                                    <%= link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, customer, :class => "btn btn-success" %>    
                                    <%= link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_customer_path(customer), :class => "btn btn-info" %>
                                    <%= link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, customer, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %>
                                </td>
                            </tr>
                            <% end %>

                          </tbody>
                      </table>            
                    </div>
                  </div>