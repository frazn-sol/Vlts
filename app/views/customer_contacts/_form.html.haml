= form_for @customer_contact do |f|
  - if @customer_contact.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer_contact.errors.count, "error")} prohibited this customer_contact from being saved:"
      %ul
        - @customer_contact.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :middle_name
    = f.text_field :middle_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :Company_Name
    = f.collection_select(:customer_id, Customer.all, :id, :company_name)   
  .field
    = f.label :designation
    = f.text_field :designation
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :cell
    = f.text_field :cell
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Create Customer Contact', {:class => "button1"}
