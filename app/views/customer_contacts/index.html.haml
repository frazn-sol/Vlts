.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Customer Contact
    .box-content
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
        %thead
          %tr
            %th Name
            %th Designation
            %th Phone
            %th Cell
            %th Email
            %th Actions
        - @customer_contacts.each do |customer_conatct|
          %tbody
            %tr
              %td= "#{customer_conatct.first_name} " + "#{customer_conatct.last_name}"
              %td.center= customer_contact.designation
              %td.center= customer_conatct.phone
              %td.center= customer_conatct.cell
              %td.center= customer_conatct.email
              %td.center
                = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, customer_conatct, :class => "btn btn-success"
                = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_customer_conatct_path(customer_conatct), :class => "btn btn-info"
                = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, customer_conatct, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"