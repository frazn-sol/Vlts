.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        organization Contact
    .box-content
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
        %thead
          %tr
            %th Name
            %th Designation
            %th Phone
            %th Cell
            %th Email
            %th Actions
        - @organization_contacts.each do |organization_contact|
          -if organization_contact.organization_id == params[:id].to_i
            %tbody
              %tr
                %td= "#{organization_contact.first_name} " + "#{organization_contact.last_name}"
                %td.center= organization_contact.designation
                %td.center= organization_contact.phone
                %td.center= organization_contact.cell
                %td.center= organization_contact.email
                %td.center
                  = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, organization_contact, :class => "btn btn-success"
                  = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_organization_contact_path(organization_contact), :class => "btn btn-info"
                  = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, organization_contact, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"
