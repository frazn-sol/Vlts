= form_for @business_manager do |f|
  - if @business_manager.errors.any?
    #error_explanation
      %h2= "#{pluralize(@business_manager.errors.count, "error")} prohibited this business_manager from being saved:"
      %ul
        - @business_manager.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address1
    = f.text_area :address1
  .field
    = f.label :address2
    = f.text_area :address2
  .field
    = f.label :city
    = f.text_field :city, {:class => "size"}
  .field.location
    = f.label :state
    = f.text_field :state, {:class => "size1"}
  .field
    = f.label :zipcode
    = f.text_field :zipcode, {:class => "size"}
  .field
    = f.label :phone1
    = f.text_field :phone1
  .field
    = f.label :phone2
    = f.text_field :phone2
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_hint
    = f.text_field :passwordhint
  .actions
    = f.submit 'Create Business Manager', {:class => "button1"}

