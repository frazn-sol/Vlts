.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Business Managers
    .box-content
      %table.table.table-striped.table-bordered.bootstrap-datatable.datatable
        %thead
          %tr
            %th Name
            %th Address1
            %th Phone1
            %th Website
            %th Email
            %th Actions
        - @business_managers.each do |business_manager|
          %tbody
            %tr
              %td= business_manager.name
              %td.center= "#{business_manager.address1} "+ "#{business_manager.city} "+"#{business_manager.state} "+ "#{business_manager.zipcode}"
              %td.center= business_manager.phone1
              %td.center= business_manager.website
              %td.center= business_manager.email
              %td.center
                = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, business_manager, :class => "btn btn-success"
                = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_business_manager_path(business_manager), :class => "btn btn-info"
                = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, business_manager, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"
  / /span
/ /row