  <div class = "header"><h1>Vehicle List</h1></div>
 <div class = "envelope">
 <div class = "allign1">
 <div class="field">
    <%= label_tag "Plaza" %><br />
    <%= text_field_tag :name, value = nil, :class => "search1" %>
  </div>
  </div>


  <div class = "allign1">
  <div class="field">
    <%= label_tag "Floor" %><br />
    <%= text_field_tag :email, value = nil, :class => "search1" %>
  </div>
  </div>

  <div class = "allign1">
  <div class="field">
    <%= label_tag "Number Plate" %><br />
    <%= text_field_tag :contact_person, value = nil, :class => "search2 " %>
  </div>
  </div>

</div>

  <div class="actions">
    <%= button_tag "Search", :class => "location1"%>
  </div>

<div class="box-content">
                        <table class="table table-striped table-bordered bootstrap-datatable datatable">
                          <thead>
                              <tr>
                                <th>Vehicle ID</th>
                                <th>Vehicle Name</th>
                                <th>Registeration Number</th>
                                <th>Actions</th>
                              </tr>
                          </thead>   
                          <% @vehicle.each do |vehicle| %>
                          <tbody>
                            <tr>
                                <td class="center"><%= vehicle.id %></td>
                                <td class="center"><%= vehicle.vehicle_name %></td>
                                <td class="center"><%= vehicle.badge_number %></td>
                                <td class="center">
                                    <%= link_to 'Show', vehicle, :class => "btn btn-success" %> 
                                    <%= link_to 'Edit', edit_vehicle_path(vehicle), :class => "btn btn-info" %> 
                                    <%= link_to 'Delete', vehicle, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %>
                                </td>
                            </tr>
                            <% end %>

                          </tbody>
                      </table>            
                    </div>