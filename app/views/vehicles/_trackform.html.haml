= form_for @vehicle_history, :url => "/vehicles/track_create", :method =>"post" do |f|
  - if @vehicle_history.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vehicle_history.errors.count, "error")} prohibited this record from being saved:"
      %ul
        - @vehicle_history.errors.full_messages.each do |msg|
          %li= msg          

  .field.allign
    = f.label :plate_number 
    = f.text_field :platenumber, {:class => "size"} 
    = f.hidden_field :vehicle_id 
  .field.allign
    = f.label :floor
    = f.collection_select(:floor_id, Floor.all, :id, :nickname, {}, :class => "size2") 

  .field.allign
    = f.label :location
    = f.collection_select(:location_id, Location.all, :id, :nickname, {}, :class => "size2")      
  
  .clear
  .field.allign
    = f.label :slot
    = f.text_field :slot, {:class => "size"}
  .actions
    = f.submit 'Create Record', {:class => "button1 push"}

:javascript
  var validator = new FormValidator('new_vehicle_history', [{
    name: 'vehicle[platenumber]',    
    rules: 'required'
  }, {
    name: 'vehicle_history[platenumber]',
    rules: 'required'
  }, {
    name: 'vehicle_history[slot]',
    rules: 'required'
  }], function(errors, event) {
    if (errors.length > 0) {
    var temp;
    for (var i=0; i<errors.length; i++){
      temp = errors[i].id;
      $("#" + temp).css("border","2px solid red");
    }
    }  
  });     

  $(function() {
    $( "#vehicle_history_platenumber" ).autocomplete({
      source: '#{autocomplete_vehicles_path(:json)}',
      minLength: 2,
      focus: function(event, ui) {
    $('#vehicle_history_platenumber').val(ui.item.platenumber);
      return false;
    },
    select: function(event, ui) {
      $('#vehicle_history_platenumber').val(ui.item.platenumber);
      $('#vehicle_history_vehicle_id').val(ui.item.id);
        return false;
          }
        })
      .data( "autocomplete" )._renderItem = function( ul, item ) {
            return $( "<li></li>" )
                .data( "item.autocomplete", item )
                .append( "<a>" + item.platenumber + "</a>" )
                .appendTo( ul );
        };    
    });
