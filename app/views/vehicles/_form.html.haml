.form
  = form_for @vehicle do |f|
    - if @vehicle.errors.any?
      #error_explanation
        %h2= "#{pluralize(@vehicle.errors.count, "error")} prohibited this vehicle from being saved:"
        %ul
          - @vehicle.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :vehicle_name
      = f.text_field :vehicle_name   
    .field
      = f.label :registration_no
      = f.text_field :badge_number    
    .field
      = f.label :driver
      = f.text_field :organization          
    .field
      = f.label :floor
      = f.select :first_name, options_for_select(%w[Floor1 Floor2 Floor3])
    .field
      = f.label :slot
      = f.select :last_name, options_for_select(%w[Slot1 Slot2 Slot3 Slot4]) 

    .actions
      = f.submit 'Add Vehicle', {:class => "button1"}          

