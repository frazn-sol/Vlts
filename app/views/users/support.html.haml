.row-fluid.sortable
  .box.span12
    .box-header.well{"data-original-title" => ""}
      %h2
        %i.icon-user.icon-white
        Support Staff
    .box-content
      #tagbar
        .aleft
          = render ("layouts/breadcrumbs")
        .aright
          = link_to "<i class=\"icon-plus icon-white\"></i> Add New".html_safe, new_user_path, :class => "btn btn-success add"
          .clear
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th First Name
            %th Last Name
            %th Phone
            %th Cell
            %th Email
            %th Actions
        - @users.each do |user|
          %tbody
            %tr
              %td= user.first_name
              %td.center= user.last_name
              %td.center= user.phone
              %td.center= user.cell
              %td.center= user.email
              %td.center.colwidth
                = link_to "<i class=\"icon-zoom-in icon-white\"></i>".html_safe, user, :class => "btn btn-success"
                = link_to "<i class=\"icon-edit icon-white\"></i>".html_safe, edit_user_path(user), :class => "btn btn-info"
                = link_to "<i class=\"icon-trash icon-white\"></i>".html_safe, user, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger"
      = will_paginate @users            