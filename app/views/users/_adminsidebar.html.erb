<div class="navbar">
  <div class="navbar-inner">
    <div class="container-fluid1">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div id="company_logo" class="aleft">
        <% if SystemConfig.last.present? && !SystemConfig.last.logo.url.empty? %>
          <%= image_tag SystemConfig.last.logo.url, {:class => "logo", :size => "227x60"} %>
        <% else %>
          <%= image_tag "logo1.png", {:class => "logo"} %>
        <% end %> 
        <div id="company_name">
          <% if SystemConfig.last.present? && !SystemConfig.last.companyname.empty? %>
            Powered By <%== SystemConfig.last.companyname%>
          <% else %>
            Powered By VLTS
            <%end%>
        </div>
      </div>
      <div id="header-opts" class="aleft">
        <a href="/users/support" class="round_circle"><span>Support Staff</span></a>
        <a href="/customers" class="round_circle"><span>Customers</span></a>
        <a href="/users/reset" class="round_circle"><span>Reset Password</span></a>
        <a href="/users/change1" class="round_circle"><span>Configration</span></a>
      </div>
      <div id="dropdown" class="aright">
        <%if current_user %>
          <!-- user dropdown starts -->
          <div class="btn-group pull-right" >
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i><span class="hidden-phone"> Hi, <%= current_user.role.capitalize %> <%= current_user.first_name %></span>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Edit Profile", edit_user_path(current_user, :param => 3)%></li>
              <li><%= link_to "Change Password", password_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete%></li>
            </ul>
          </div>
        <%end%>
        <!-- user dropdown ends -->
      </div>  
      <div class="clear"></div>
    </div>
  </div>
</div>

<% if notice %>
