#content.span10
  .sortable.row-fluid
    -if current_user.role == "admin"
      %a.well.span3.top-block
        %span.icon32.icon-red.icon-user
        %div Support Staff
        %div
          = current_user.children.where(:role => "support").count
    -if (current_user.role == "admin" || current_user.role == "support")      
      %a.well.span3.top-block
        %span.icon32.icon-red.icon-user
        %div Customers
        %div
          = Customer.where(:user_id => "#{current_user.id}").count
    -if (current_user.role == "customer")      
      %a.well.span3.top-block
        %span.icon32.icon-red.icon-user
        %div Supervisors
        %div
          = User.where(:role => "supervisor", :parent_id => "#{current_user.id}").count 
      %a.well.span3.top-block
        %span.icon32.icon-red.icon-user
        %div Users
        %div
          = current_user.children.where(:role => "user").count 

    .row-fluid
      .box.span12
        .box-header.well
          %h2
            %i.icon-info-sign
            Welcome
          .box-icon
            %a.btn.btn-setting.btn-round{href: "#"}
              %i.icon-cog
            %a.btn.btn-minimize.btn-round{href: "#"}
              %i.icon-chevron-up
            %a.btn.btn-close.btn-round{href: "#"}
              %i.icon-remove
        .box-content
          %h1
            VLTS
            %small A smart way to handle and track your vehicles
          .clearfix